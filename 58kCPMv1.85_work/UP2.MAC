; *****
;
	.Z80
	CSEG
;
	PUBLIC	UP2OUT
;
SIO4DAT	EQU	X'A4'			; SIO4 DATA I/O PORT
SIO4STA	EQU	X'A5'			; SIO4 STATUS PORT
;
TXRDY	EQU	X'01'			; XMTR BUFFER EMPTY BIT
;
; *****
; ***** OUTPUT DATA
; *****
;
UP2OUT:
	IN	A,(SIO4STA)		; GET STATUS
	AND	TXRDY			; MASK WHAT WE WANT
	JR	Z,UP2OUT		; IF NOT, WAIT TILL READY
	LD	A,C			; ELSE GET CHARACTER TO SEND
	OUT	(SIO4DAT),A		; SEND IT
	RET				; EXIT
;
	END
