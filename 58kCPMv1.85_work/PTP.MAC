;
; *****
; ***** PTP DRIVER
; ***** TOM DE LELLIS
; ***** 11/29/85
; *****
;
	.Z80
	CSEG
;
	PUBLIC	PTPOUT
;
SIO2DAT	EQU	X'C4'			; SIO1 DATA I/O PORT
SIO2STA	EQU	X'C5'			; SIO1 STATUS PORT
;
TXRDY	EQU	X'01'			; XMTR BUFFER EMPTY BIT
;
; *****
; ***** OUTPUT DATA
; *****
;
PTPOUT:
	IN	A,(SIO2STA)		; GET STATUS
	AND	TXRDY			; MASK WHAT WE WANT
	JR	Z,PTPOUT		; IF NOT, WAIT TILL READY
	LD	A,C			; ELSE GET CHARACTER TO SEND
	OUT	(SIO2DAT),A		; SEND IT
	RET				; EXIT
;
	END
