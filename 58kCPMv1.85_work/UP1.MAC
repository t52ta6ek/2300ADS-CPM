; ***** 11/29/85
; *****
;
	.Z80
	CSEG
;
	PUBLIC	UP1OUT
;
SIO3DAT	EQU	X'A0'			; SIO3 DATA I/O PORT
SIO3STA	EQU	X'A1'			; SIO3 STATUS PORT
;
TXRDY	EQU	X'01'			; XMTR BUFFER EMPTY BIT
;
; *****
; ***** OUTPUT DATA
; *****
;
UP1OUT:
	IN	A,(SIO3STA)		; GET STATUS
	AND	TXRDY			; MASK WHAT WE WANT
	JR	Z,UP1OUT		; IF NOT, WAIT TILL READY
	LD	A,C			; ELSE GET CHARACTER TO SEND
	OUT	(SIO3DAT),A		; SEND IT
	RET				; EXIT
;
	END
